def double(int a)
    a * 2
end

def recurse(int a)
    double(a)
    if a > 0
        recurse(a - 1)
    else
        a
    end
end

def equal?(int a, int b)
    a == b
end

def even?(int a)
    a % 2 == 0
end

def loop(int a)
    while a > 0
        print a
        println even?(a)
        a --
    end
end

def prime?(int a)
    prime = true

    if a < 2 || (a > 2 && a % 2 == 0)
        prime = false
    end

    i = 3

    while (prime && i < a)
        if a % i == 0
            prime = false
            print i
        end
        i += 2
    end
    prime
end

